<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_move_to_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move File to Trash" />

    <Button
        android:id="@+id/btn_restore_from_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore File from Trash"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_delete_permanently"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Permanently"
        android:layout_marginTop="16dp" />

</LinearLayout>

